{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "semi": ["error", "never"],
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],

        "comma-dangle": ["error", "always-multiline"],
        "quotes": ["error", "single"],
        "camelcase": ["error", {"properties": "always"}],
        "max-len": ["error", 120]
    }
}
